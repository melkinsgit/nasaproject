extends layout

block content

	h1 Favorites

	if favorites.length != 0
		each fav in favorites

			.favitem
				a(href="#{fav.apodurl}")
					img.favimage(src="#{fav.url}")
				p.favtitle #{fav.title}
				p.favdate #{fav.date}
				p
					form(action='favorites/deleteFave' method='post')
						input(name='title' value="#{fav.title}" type="hidden")
						input.btn.btn-danger.btn-lg(type='submit' value='Delete')

	else
		p No favorites saved yet.

	include buttons